@page "/Proveedores/Create/{ProveedorId:int}"


@using Microsoft.AspNetCore.Identity
@using Los4Carnales.Data


@inject SweetAlertService Swal
@inject ProveedoresServices proveedoresServices
@inject NavigationManager navigationManager

@inject UserManager<ApplicationUser> UserManager
@inject AuthenticationStateProvider AuthStateProvider

@rendermode InteractiveServer
@attribute [Authorize(Roles = "Administrador")]

<PageTitle>Proveedores</PageTitle>
<div class="container mt-4">
    <div class="card card-glass rounded-4 p-4 shadow-sm">
        <EditForm Model="proveedor" OnValidSubmit="Guardar">
            <DataAnnotationsValidator></DataAnnotationsValidator>

            <div class="card-body bg-white rounded-4 p-4">

                <div class="row g-4">

                    <div class="col-md-6">
                        <label class="form-label fw-bold">Fecha Registro</label>
                        <InputDate class="form-control input-glass" @bind-Value="proveedor.Fecha" />
                        <ValidationMessage For="@(() => (proveedor.Fecha))"></ValidationMessage>
                    </div>

                    <div class="col-md-6">
                        <label class="form-label fw-bold">Días de Entrega</label>
                        <select class="form-select input-glass">
                            <option>Diario</option>
                        </select>
                    </div>

                    <div class="col-md-6">
                        <label class="form-label fw-bold">Nombre / Razón Social</label>
                        <InputText class="form-control input-glass" @bind-Value="proveedor.Nombre" placeholder="Ej: Distribuidora Lo Mameye" />
                        <ValidationMessage For="@(() => (proveedor.Nombre))"></ValidationMessage>
                    </div>

                    <div class="col-md-6">
                        <label class="form-label fw-bold">Teléfono</label>
                        <InputText class="form-control input-glass" @bind-Value="proveedor.Telefono" placeholder="Ej: 809-555-1234" />
                        <ValidationMessage For="@(() => (proveedor.Telefono))"></ValidationMessage>
                    </div>

                    <div class="col-md-6">
                        <label class="form-label fw-bold">Correo Electrónico</label>
                        <InputText class="form-control input-glass" @bind-Value="proveedor.Correo" placeholder="Ej: Empresa@gmail.com" />
                        <ValidationMessage For="@(() => (proveedor.Correo))"></ValidationMessage>
                    </div>

                    <div class="col-md-6">
                        <label class="form-label fw-bold">Dirección</label>
                        <InputText class="form-control input-glass" @bind-Value="proveedor.Dirrecion" placeholder="Dirección del local..." />
                        <ValidationMessage For="@(() => (proveedor.Dirrecion))"></ValidationMessage>
                    </div>

                    <div class="col-12 d-flex justify-content-between mt-4">
                        <a href="/Proveedor/Index" class="btn btn-outline-secondary rounded-3 px-4">Volver</a>

                        <div class="d-flex">
                            @if (crear == "Editar")
                            {
                               
                                <button type="button" class="btn btn-outline-danger me-2" @onclick="Eliminar">
                                    <i class="bi bi-trash"></i> Eliminar
                                </button>
                            }
                            <button type="submit" class="btn btn-success rounded-3 px-5" style="background-color: #4c7c4c; border: none;">Guardar</button>
                        </div>
                    </div>

                </div>
            </div>

        </EditForm>
    </div>
</div>

@code {
    [Parameter] public int ProveedorId { get; set; }

    public Proveedores proveedor { get; set; } = new Proveedores();

    public string crear { get; set; }

    protected override async Task OnInitializedAsync()
    {
        crear = ProveedorId == 0 ? "Crear" : "Editar";
        if (ProveedorId > 0)
        {
            proveedor = await proveedoresServices.Buscar(ProveedorId);
        }
        else
        {
            proveedor.Fecha = DateTime.Today;
        }
    }

    public async Task Guardar()
    {
        try
        {
            var ok = await proveedoresServices.Guardar(proveedor);

            if (ok)
            {
                await Swal.FireAsync("¡Guardado!", "El proveedor se guardó exitosamente.", SweetAlertIcon.Success);
                navigationManager.NavigateTo("/Proveedor/Index");
            }
        }
        catch (Exception ex)
        {
            await Swal.FireAsync("Error", "Ocurrió un problema al guardar.", SweetAlertIcon.Error);
            Console.WriteLine(ex.Message);
        }
    }

    public async Task Eliminar()
    {
       
        var confirmacion = await Swal.FireAsync(new SweetAlertOptions
        {
            Title = "¿Estás seguro?",
            Text = $"¿Deseas eliminar al proveedor {proveedor.Nombre}?",
            Icon = SweetAlertIcon.Warning,
            ShowCancelButton = true,
            ConfirmButtonColor = "#d33",
            CancelButtonColor = "#6c757d",
            ConfirmButtonText = "Sí, eliminar",
            CancelButtonText = "Cancelar"
        });

       
        if (!string.IsNullOrEmpty(confirmacion.Value))
        {
            var passwordResult = await Swal.FireAsync(new SweetAlertOptions
            {
                Title = "Confirmar identidad",
                Text = "Ingresa tu contraseña de administrador para autorizar:",
                Input = SweetAlertInputType.Password,
                InputPlaceholder = "Tu contraseña",
                ShowCancelButton = true,
                ConfirmButtonColor = "#3D5D35",
                CancelButtonText = "Cancelar",
                ConfirmButtonText = "Verificar"
            });

           
            if (!string.IsNullOrEmpty(passwordResult.Value))
            {
                string passwordIngresado = passwordResult.Value;

               
                var authState = await AuthStateProvider.GetAuthenticationStateAsync();
                var user = await UserManager.GetUserAsync(authState.User);

                bool passwordCorrecto = false;
                if (user != null)
                {
                    
                    passwordCorrecto = await UserManager.CheckPasswordAsync(user, passwordIngresado);
                }

                if (passwordCorrecto)
                {
                   
                    var ok = await proveedoresServices.Eliminar(proveedor.ProveedorId);

                    if (ok)
                    {
                        
                        await Swal.FireAsync("¡Eliminado!", "El proveedor se borró correctamente.", SweetAlertIcon.Success);
                        navigationManager.NavigateTo("/Proveedor/Index");
                    }
                    else
                    {
                        await Swal.FireAsync("Error", "No se pudo eliminar de la base de datos.", SweetAlertIcon.Error);
                    }
                }
                else
                {
                   
                    await Swal.FireAsync("Acceso Denegado", "La contraseña es incorrecta. Operación cancelada.", SweetAlertIcon.Error);
                }
            }
        }
    }
}